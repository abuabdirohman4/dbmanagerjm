<%- include('../../templates/header') %>

<script>
    var audience_head_id = <%- audience_head_id %>
</script>
<script>
  var audiences = <%- JSON.stringify(audiences) %>
  var current_selected_audience_id = 0
  var event_id = <%- event_id %>
  var current_registration_state = ''
</script>
<script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js'></script>

<nav class="navbar navbar-light justify-content-between">
    <a class="navbar-brand text-white-900 col-sm-4 col-xs-12" style="color:white">PENGAJIAN PERNAK PERNIK</a>
    <a class="form-inline navbar-brand text-white-900 col-xs-8 text-right menu-1" style="color:white">BANDUNG SELATAN 2</a>
</nav>

<body class="bg-gradient-primary">
  <div class="container" >
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            
             <!-- Nested Row within Card Body -->
             <div id="success-msg" class="row animate-box" data-animate-effect="fadeInUp" style="display:none">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center" >
                    <h1 class="mb-4 font-size: 120px" style="font-size:59px; font-family:Kaushan Script" >
                      Presensi Berhasil, Silakan Mengaji!
                    </h1>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->

            <hr class="sidebar-divider my-0 ">

            <!-- Nested Row within Card Body -->
            <div id="presence" class="row animate-box" data-animate-effect="fadeInUp">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center" >
                    <h1 class="mb-4 font-size: 120px" style="font-size:59px; font-family:Kaushan Script" >
                      Silakan Masukkan Nama Anda
                    </h1>
                  </div>
                  <form class="user">
                    <div class="form-group">
                      <input
                        type="text"
                        class="form-control form-control-lg form-control-user text-left"
                        id="name"
                        placeholder="MASUKKAN NAMA ANDA"
                        style="text-transform: uppercase;"
                      />
                        <ul class="list-group" id="result">
                        </ul>
                        </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->
            
            <hr class="sidebar-divider my-0 ">
            
            <!-- Nested Row within Card Body -->
            <div id="register" class="row animate-box" data-animate-effect="fadeInUp" style="display:none">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="mb-4 font-size: 120px" style="font-size:59px; font-family:Kaushan Script">
                      Silakan Lengkapi Form nya
                    </h1>
                  </div>
                  <form action="" method="post" id="form1" name="form1" autocomplete="off">
                  
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="nama">NAMA LENGKAP</label>
                        <input type="text" id="nama" name="nama" class="form-control" autocomplete="off">
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="gender">JENIS KELAMIN</label>
                        <select name="audience_meta_values" id="gender" class="form-control">
                          <option value="" disabled selected></option>
                          <option value="LAKI-LAKI">LAKI-LAKI</option>
                          <option value="PEREMPUAN">PEREMPUAN</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="desa">Desa</label>
                        <select id="desa" name="audience_meta_values" class="form-control">
                          <option value="" disabled selected></option>
                          <option value="BANJARAN">BANJARAN</option>
                          <option value="BALEENDAH">BALEENDAH</option>
                          <option value="CIPARAY">CIPARAY</option>
                          <option value="MAJALAYA">MAJALAYA</option>
                          <option value="SAYATI">SAYATI</option>
                          <option value="SOREANG">SOREANG</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="kelompok">KELOMPOK</label>
                        <select id="kelompok" name="kelompok" class="form-control">
                          <option value="" disabled selected></option>
                        </select>
                      </div>
                    </div>
                    
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="pendidikan">JENJANG PENDIDIKAN</label>
                        <select name="pendidikan" id="pendidikan" class="form-control">
                          <option value="" disabled selected></option>
                          <option value="SMP">SMP</option>
                          <option value="SMA">SMA</option>
                          <option value="SMK">SMK</option>
                          <option value="KULIAH">KULIAH</option>
                          <option value="LULUS/KERJA">LULUS/KERJA</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="kelas">KELAS/TINGKATAN</label>
                        <select name="kelas" id="kelas" class="form-control">
                          <option value="" disabled selected></option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-4">
                        <label for="ttl">TANGGAL LAHIR</label>
                        <input type="text" id="ttl-tgl" name="ttl" class="form-control" autocomplete="off">
                      </div>
                      <div class="col-md-4">
                        <label for="ttl">BULAN LAHIR</label>
                        <input type="text" id="ttl-bulan" name="ttl" class="form-control" autocomplete="off">
                      </div>
                      <div class="col-md-4">
                        <label for="ttl">TAHUN LAHIR</label>
                        <input type="text" id="ttl-tahun" name="ttl" class="form-control" autocomplete="off">
                      </div>
                    </div>
                  
                    
                    <div class="row form-group">
                      <div class="col-md-12">
                        <button type="submit" name="submit" id="presence-btn" class="btn btn-primary btn-user btn-block text-center">SUBMIT</button>
                        <button type="submit" name="submit" id="cancel-btn" class="btn btn-primary btn-user btn-block text-center" style="border-color: #e74a3b; background: #e74a3b!important
                        ">CANCEL</button>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->

          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../../templates/footer') %>
  <script src="<%= config.hostname %>/assets/js/presence.js"></script>
</body>
