<%- include('../../layout/header') %>

<script>
  var audiences = <%- JSON.stringify(audiences) %>
  var current_selected_audience_id = 0
  var event_id = <%- event_id %>
  var current_registration_state = ''
</script>

<body class="bg-gradient-primary">
  <div class="container" >
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-lg-12">
        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            
             <!-- Nested Row within Card Body -->
             <div id="success-msg" class="row animate-box" data-animate-effect="fadeInUp" style="display:none">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center" >
                    <h1 class="mb-4 font-size: 120px" style="font-size:59px; font-family:Kaushan Script" >
                      Presensi Berhasil, Silakan Mengaji!
                    </h1>
                  </div>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->

            <hr class="sidebar-divider my-0 ">

            <!-- Nested Row within Card Body -->
            <div id="presence" class="row animate-box" data-animate-effect="fadeInUp">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center" >
                    <h1 class="mb-4" style="font-size:3rem; font-family:Kaushan Script" >
                      Silakan Masukkan Nama Anda
                    </h1>
                  </div>
                  <form class="user">
                    <div class="form-group">
                      <input
                        type="text"
                        class="form-control form-control-lg form-control-user text-left"
                        id="name"
                        placeholder="MASUKKAN NAMA ANDA"
                        style="text-transform: uppercase;"
                      />
                        <ul class="list-group" id="result">
                        </ul>
                        </div>
                  </form>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->
            
            <hr class="sidebar-divider my-0 ">
            
            <!-- Nested Row within Card Body -->
            <div id="register" class="row animate-box" data-animate-effect="fadeInUp" style="display:none">
              <div class="col-lg">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="mb-4 font-size: 120px" style="font-size:59px; font-family:Kaushan Script">
                      Silakan Lengkapi Form nya
                    </h1>
                  </div>
                  <form id="completion-form" data-parsley-validate>
            
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="nama">NAMA LENGKAP</label>
                        <input type="text" id="nama" name="nama" class="form-control" autocomplete="off" style="text-transform: uppercase">
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="gender">JENIS KELAMIN</label>
                        <select name="audience_meta_values" id="gender" class="form-control" required>
                          <option value="" disabled selected></option>
                          <option value="LAKI-LAKI">LAKI-LAKI</option>
                          <option value="PEREMPUAN">PEREMPUAN</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="desa">DESA</label>
                        <select id="desa" name="audience_meta_values" class="form-control" required>
                          <option value="" disabled selected></option>
                          <option value="BANJARAN">BANJARAN</option>
                          <option value="BALEENDAH">BALEENDAH</option>
                          <option value="CIPARAY">CIPARAY</option>
                          <option value="MAJALAYA">MAJALAYA</option>
                          <option value="SAYATI">SAYATI</option>
                          <option value="SOREANG">SOREANG</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="kelompok">KELOMPOK</label>
                        <select id="kelompok" name="kelompok" class="form-control" required>
                          <option value="" disabled selected></option>
                        </select>
                      </div>
                    </div>
            
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="pendidikan">JENJANG PENDIDIKAN</label>
                        <select name="pendidikan" id="pendidikan" class="form-control" required>
                          <option value="" disabled selected></option>
                          <option value="SMP">SMP</option>
                          <option value="SMA">SMA</option>
                          <option value="SMK">SMK</option>
                          <option value="KULIAH">KULIAH</option>
                          <option value="LULUS/KERJA">LULUS/KERJA</option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-12">
                        <label for="kelas">KELAS/TINGKATAN</label>
                        <select name="kelas" id="kelas" class="form-control">
                          <option value="" disabled selected></option>
                        </select>
                      </div>
                    </div>
                    <div class="row form-group">
                      <div class="col-md-4">
                        <label for="ttl">TANGGAL LAHIR</label>
                        <select name="ttl" id="ttl-tgl" class="form-control" required>
                          <option value="" disabled selected></option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                          <option value="5">5</option>
                          <option value="6">6</option>
                          <option value="7">7</option>
                          <option value="8">8</option>
                          <option value="9">9</option>
                          <option value="10">10</option>
                          <option value="11">11</option>
                          <option value="12">12</option>
                          <option value="13">13</option>
                          <option value="14">14</option>
                          <option value="15">15</option>
                          <option value="16">16</option>
                          <option value="17">17</option>
                          <option value="18">18</option>
                          <option value="19">19</option>
                          <option value="20">20</option>
                          <option value="21">21</option>
                          <option value="22">22</option>
                          <option value="23">23</option>
                          <option value="24">24</option>
                          <option value="25">25</option>
                          <option value="26">26</option>
                          <option value="27">27</option>
                          <option value="28">28</option>
                          <option value="29">29</option>
                          <option value="30">30</option>
                          <option value="31">31</option>
                        </select>
                      </div>
                      <div class="col-md-4">
                        <label for="ttl">BULAN LAHIR</label>
                        <select name="ttl" id="ttl-bulan" class="form-control" required>
                          <option value="" disabled selected></option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                          <option value="5">5</option>
                          <option value="6">6</option>
                          <option value="7">7</option>
                          <option value="8">8</option>
                          <option value="9">9</option>
                          <option value="10">10</option>
                          <option value="11">11</option>
                          <option value="12">12</option>
                        </select>
                      </div>
                      <div class="col-md-4">
                        <label for="ttl">TAHUN LAHIR</label>
                        <input type="text" id="ttl-tahun" name="ttl" class="form-control" autocomplete="off" required>
                      </div>
                    </div>
            
            
                    <div class="row form-group">
                      <div class="col-md-12">
                        <button type="submit" name="submit" id="presence-btn"
                          class="btn btn-primary btn-user btn-block text-center">SUBMIT</button>
                        <button type="submit" name="submit" id="cancel-btn" class="btn btn-primary btn-user btn-block text-center"
                          style="border-color: #e74a3b; background: #e74a3b!important">CANCEL</button>
                      </div>
                    </div>

                  </form>
                </div>
              </div>
            </div>
            <!-- End Nested Row within Card Body -->

          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../../layout/footer') %>

  <!-- JS Files -->
  <script src='https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment-with-locales.min.js'></script>
  <script src="<%= config.hostname %>/assets/js/parsley.min.js"></script>
  <script src="<%= config.hostname %>/assets/js/presence.js"></script>
  <!-- End JS Files -->

</body>
